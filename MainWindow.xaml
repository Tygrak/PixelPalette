<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PixelPalette.MainWindow"
        Title="PixelPalette">
    <DockPanel>
        <Border DockPanel.Dock="Top" Height="50" BorderBrush="Black" BorderThickness="2" Background="Gray">
            <DockPanel>
                <Button Name="OpenFile" DockPanel.Dock="Left" Click="OnOpenFileButton">
                    Open File
                </Button>
                <Button Name="LoadPalette" DockPanel.Dock="Left">
                    Load Palette
                </Button>
                <DockPanel>
                </DockPanel>
            </DockPanel>
        </Border>
        <Border DockPanel.Dock="Left" Width="50" BorderBrush="Black" BorderThickness="2" Background="White">
            <DockPanel>
                <Button Name="Dither" DockPanel.Dock="Top" Height="50">
                    Dither
                </Button>
                <Button Name="PaletteSwap" DockPanel.Dock="Top" Height="50">
                    Palette Swap
                </Button>
                <DockPanel>
                </DockPanel>
            </DockPanel>
        </Border>
        <Image Name="MainImage">
        </Image>
    </DockPanel>
</Window>
